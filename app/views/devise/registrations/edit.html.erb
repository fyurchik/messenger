<div class="d-flex justify-content-center mt-5">
  <div class="card p-4" style="width: 100%; max-width: 400px; border-color: #28a745;">
    <h2 class="text-center mb-4 text-success">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-edit" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label small text-success" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-success" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning text-center mb-3">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label small text-success" %> <small>(leave blank if you don't want to change it)</small>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm border-success" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, class: "form-label small text-success" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :current_password, class: "form-label small text-success" %> <small>(we need your current password to confirm your changes)</small>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3 text-center">
        <% if resource.persisted? && resource.image.attached? %>
          <%= image_tag resource.image, size: "80x80", class: "rounded mb-3" %>
        <% else %>
          <%= image_tag asset_path("default_image.png"), size: "80x80", class: "rounded mb-3" %>
        <% end %>
      </div>


      <div class="form-group mb-3">
        <%= f.label :image, class: "form-label small text-success" %>
        <%= f.file_field :image, class: "form-control form-control-sm border-success" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Update", class: "btn btn-success btn-block btn-sm" %>
      </div>
    <% end %>


    <div class="mt-3 text-center">
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-sm" %>
    </div>
  </div>
</div>

<style>
  /* Ensure the page is scrollable */
  body {
    overflow-y: auto; /* Allows vertical scrolling */
  }

  /* Limit the card height to fit the viewport and make it scrollable if needed */
  .d-flex.justify-content-center .card.p-4 {
    max-height: 85vh; /* Keeps the form within the viewport */
    overflow-y: auto; /* Enables scrolling within the form if it overflows */
  }
</style>
