<div class="d-flex justify-content-center mt-5 bg-light">
  <div class="card p-4 bg-light" style="width: 100%; max-width: 400px; border-color: #28a745;">
    <h2 class="text-center mb-4 text-success">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label small text-success" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label small text-success" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, class: "form-label small text-success" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :image, class: "form-label small text-success" %>
        <%= f.file_field :image, class: "form-control form-control-sm border-success" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-success btn-block btn-sm" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
