<div class="d-flex justify-content-center mt-5">
  <div class="card p-4" style="width: 100%; max-width: 400px; border-color: #28a745;">
    <h2 class="text-center mb-4 text-success">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-login" }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label small text-success" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-success" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label small text-success" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm border-success" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input border-success" %>
          <%= f.label :remember_me, class: "form-check-label text-success" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-success btn-block btn-sm" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
